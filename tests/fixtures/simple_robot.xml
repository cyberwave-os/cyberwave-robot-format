<mujoco model="simple_robot">
  <compiler angle="radian" autolimits="true"/>
  
  <option timestep="0.002" integrator="implicitfast"/>
  
  <worldbody>
    <body name="base_link" pos="0 0 0">
      <inertial pos="0 0 0" mass="1.0" diaginertia="0.1 0.1 0.1"/>
      <geom name="base_geom" type="box" size="0.05 0.05 0.05" rgba="0 0 1 1"/>
      
      <body name="link1" pos="0 0 0.1">
        <inertial pos="0 0 0" mass="0.5" diaginertia="0.05 0.05 0.05"/>
        <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14 3.14" damping="0.1" frictionloss="0.05"/>
        <geom name="link1_geom" type="cylinder" size="0.05 0.1" rgba="1 0 0 1"/>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="motor1" joint="joint1" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>
</mujoco>
